        "body": ["\\bl"],
        "description": "Force blank line"
    },
    // BLURB: ------------------------------------------------------------------
    "Add blurb": {
        "scope": "latex",
        "prefix": ["blurb"],
        "body": ["\\blurb{${1:flavor-text}}$0"],
        "description": "Add flavor-text to the back cover"
    },
    // BOLD: -------------------------------------------------------------------
    "Bold text": {
        "scope": "latex",
        "prefix": ["bold"],
        "body": ["\\b{$1}$0"],
        "description": "Bold text"
    },
    // BORDERS: ----------------------------------------------------------------
    "Add ornamental borders": {
        "scope": "latex",
        "prefix": ["borders", "ornaments"],
        "body": ["\\borders{$1:id}{$2:color!opacity}{$3:width}{$4:padding}$0"],
        "description": "Add ornamental borders"
    },
    // BYLINE: -----------------------------------------------------------------
    "Add byline": {
        "scope": "latex",
