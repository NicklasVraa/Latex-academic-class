        "body": ["\\by{${1:name}}{${2:contact}}{${3:image.png}}$0"],
        "description": "Add byline"
    },
    // CITATION: ---------------------------------------------------------------
    "Cite source": {
        "scope": "latex",
        "prefix": ["cite", "citation", "source"],
        "body": ["\\cite{$1:source}$0"],
        "description": "Cite source"
    },
    // CODE INLINE: ------------------------------------------------------------
    "Inline code": {
        "scope": "latex",
        "prefix": ["code"],
        "body": ["\\c{$1}$0"],
        "description": "Add inline code"
    },
    // CODE BLOCK: -------------------------------------------------------------
    "Start code block": {
        "scope": "latex",
