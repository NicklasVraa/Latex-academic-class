// Snippets for latex writing using the lix package.
// Author: Nicklas Vraa.
{
    // ABSTRACT: ---------------------------------------------------------------
    "Add abstract": {
        "scope": "latex",
        "prefix": ["abstract"],
        "body": ["\\abstract{${1:your summary}}$0"],
        "description": "Add abstract"
    },
    // ADD: --------------------------------------------------------------------
    "Inset tex or pdf": {
        "scope": "latex",
        "prefix": ["add", "input", "import", "include", "pdf"],
        "body": ["\\add{${1|file.tex,file.pdf|}}$0"],
        "description": "Insert tex or pdf"
    },
    // ALGORITHM: --------------------------------------------------------------
    "Start algorithm": {
        "scope": "latex",
        "prefix": ["algo", "algorithm"],
        "body": ["\\algo{${1:label}}{\n${3:...}\n}{${4:caption}}$0"],
        "description": "Start algorithm"
    },
    // ANCHOR: -----------------------------------------------------------------
    "Anchor/anchor content": {
        "scope": "latex",
        "prefix": ["anchor", "align"],
        "body": ["\\anchor{${1|center,left,right|}}{\n$0\n}"],
        "description": "Anchor/align content"
    },
    // AUTHORS: ----------------------------------------------------------------
    "Add authors": {
        "scope": "latex",
        "prefix": ["authors"],
        "body": ["\\authors{${1:first}}$0"],
        "description": "Add authors"
    },
    // BIBLIOGRAPHY: -----------------------------------------------------------
    "Insert bibliography": {
        "scope": "latex",
        "prefix": ["bibliography"],
        "body": ["\\bib{${1:path/to/file}}{${2|style,unsrt,plain,ieeetr,abbrv,acm,alpha,apalike,ieeetr,siam|}}$0"],
        "description": "Insert bibliography"
    },
    // BLANK LINE: -------------------------------------------------------------
    "Force blank line": {
